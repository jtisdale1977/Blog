@model IEnumerable<Blog.Models.Comment>

<body>
    <div class="subscribe-box">
        <h2>Comment Index (Admin)</h2>
    </div>
    <br />
    <div class="clear"> </div>

    @foreach (var item in Model)
    {

        <div class="comment-section">
            <div class="comment-box">
                <div class="comment-people-pic">
                    <a href="javascript:void(0);"><img src="/images/man3.jpg" alt=""></a>
                </div>
                <div class="comment-info">
                    <div class="comment-info-head">
                        <div class="comment-info-head-left">
                            <p>@Html.DisplayFor(modelItem => item.Author.FirstName)</p>
                        </div>
                        <div class="comment-info-head-right">
                            <ul>
                                <li><p>Created: </p><p>@Html.DisplayFor(modelItem => item.Created)</p></li>
                                <li><p>Updated: </p><p>@Html.DisplayFor(modelItem => item.Updated)</p></li>
                                <li><p>Update Reason: </p><p>@Html.DisplayFor(modelItem => item.UpdateReason)</p></li>
                            </ul>
                        </div>
                        <div class="clear"> </div>
                        <div class="comment-place">
                            <h1 align="center">@Html.DisplayFor(modelItem => item.Post.Title)</h1>
                            <p>@Html.DisplayFor(modelItem => item.Body)</p>
                        </div>
                        <div class="artical-related-info">
                            <div class="artical-related-info-row">
                                <ul class="artical-related-info-row-left">
                                    <li><a class="view"><span> </span>@Html.ActionLink("Edit", "Edit", new { id = item.id })</a></li>
                                    <li><a class="comment-icon"><span> </span>@Html.ActionLink("Delete", "Delete", new { id = item.id })</a></li>
                                    <li><a class="home-iconh"><span> </span>@Html.ActionLink("Back to List", "Index")</a></li>
                                </ul>
                                <div class="clear"> </div>
                            </div>
                        </div>
                        <div class="clear"> </div>
                    </div>
                </div>
                <div class="clear"> </div>
            </div>
        </div>
    }

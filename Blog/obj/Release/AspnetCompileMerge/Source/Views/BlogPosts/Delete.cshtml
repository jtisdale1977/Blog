@model Blog.Models.BlogPosts

<body>
    <div class="subscribe-box">
        <h2>Blog Posts Delete (Admin)</h2>
        <ul class="subscribe-box">
            <li>
                <h2>Are you sure you want to delete this blog post?</h2>
            </li>
        </ul>
    </div>
    <br />
    <div class="clear"> </div>

    <div class="clear"> </div>
    <!---start-blog and tabs-section---->
    <div class="blog-tabs">
        <div class="blog-section" id="bs">
            <div class="blog-artical">
                <div class="blog-artical-head">
                    <img class="artical-img" src="@Url.Content(Model.SingleBlogImg)" alt="">
                    <ul class="artical-date">
                        <li><p>Created: </p><p>@Html.DisplayFor(model => model.Created)</p></li>
                        <li><p>Updated: </p><p>@Html.DisplayFor(model => model.Updated)</p></li>
                        <li><a class="text-icon" href="#"> </a></li>
                    </ul>
                    <div class="clear"> </div>
                </div>
                <div class="artical-info">
                    <a href="#"><h4>@Html.DisplayFor(model => model.Title)</h4></a>
                    <p>@Html.Raw(Model.Body)</p>
                </div>
                <div class="artical-related-info">
                    <div class="artical-related-info-row">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="artical-related-info">
                                <div class="artical-related-info-row">
                                    <ul class="artical-related-info-row-left">
                                        <li><input type="submit" value="Delete" class="btn-default" /></li>
                                        <li><button type="button" class="btn-default">@Html.ActionLink("Back to List", "Index")</button></li>
                                    </ul>
                                    <div class="clear"> </div>
                                </div>
                            </div>
                        }
                        <div class="clear"> </div>
                    </div>
                </div>
            </div>

            <!---//Blog comments and news----->

            <div class="clear"> </div>
            <!---start-comment-section----->
            @foreach (var comment in Model.Comments.Reverse())
            {

                <div class="comment-section">
                    <div class="comment-box">
                        <div class="comment-people-pic">
                            <a href="javascript:void(0);"><img src="/images/man3.jpg" alt=""></a>
                        </div>
                        <div class="comment-info">
                            <div class="comment-info-head">
                                <div class="comment-info-head-left">
                                    <a href="javascript:void(0);">@comment.Author.FirstName</a>
                                </div>
                                <div class="comment-info-head-right">
                                    <ul>
                                        <li><a class="date-of-post" href="javascript:void(0);">@comment.Created</a></li>
                                        <li><a class="replay" href="javascript:void(0);">Reply</a></li>
                                    </ul>
                                </div>
                                <div class="clear"> </div>
                                <div class="comment-place">
                                    <p>@comment.Body</p>
                                </div>
                                <div class="clear"> </div>
                            </div>
                        </div>
                        <div class="clear"> </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="clear"> </div>
</body>

@model IEnumerable<Blog.Models.BlogPosts>

<body>
    <div class="subscribe-box">
        <h2>Blog Post Index (Admin)</h2>
    </div>
    <br />
    <div class="clear"> </div>

        @foreach (var blogPost in Model)
        {
            <div class="grids-slider-grid-row2">
                <div class="grids-slider-grid-row2-grid1">
                    <div class="grid-img">
                        <img src="@Url.Content(blogPost.MediaURL)" alt="" />
                    </div>
                    <div class="grid-tags">
                        <div class="grid-top-tags-qt">
                            <a href="@Url.Action("Details", "BlogPosts", new { Slug = blogPost.Slug })">
                                <p>@blogPost.Title</p>
                            </a>
                        </div>
                        <div class="grid-top-tags">
                            <ul>
                                <li>@blogPost.Created</li>
                            </ul>
                            <div class="clear"> </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="clear"> </div>
</body>

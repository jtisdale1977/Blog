@model Blog.Models.Comment


<body>
    <div class="subscribe-box">
        <h2>Comments Delete (Admin)</h2>
        <ul class="subscribe-box">
            <li>
                <h2>Are you sure you want to delete this comment?</h2>
            </li>
        </ul>
    </div>
    <br />
    <div class="clear"> </div>

    <div class="clear"> </div>

    <div class="comment-section">
        <div class="comment-box">
            <div class="comment-people-pic">
                <a href="javascript:void(0);"><img src="/images/man3.jpg" alt=""></a>
            </div>
            <div class="comment-info">
                <div class="comment-info-head">
                    <div class="comment-info-head-left">
                        <p>@Html.DisplayFor(model => model.Author.FirstName)</p>
                    </div>
                    <div class="comment-info-head-right">
                        <ul>
                            <li><p>Created: </p><p>@Html.DisplayFor(model => model.Created)</p></li>
                            <li><p>Updated: </p><p>@Html.DisplayFor(model => model.Updated)</p></li>
                            <li><p>Update Reason: </p><p>@Html.DisplayFor(model => model.UpdateReason)</p></li>
                        </ul>
                    </div>
                    <div class="clear"> </div>
                    <div class="comment-place">
                        <h1 align="center">@Html.DisplayFor(model => model.Post.Title)</h1>
                        <p>@Html.DisplayFor(model => model.Body)</p>
                    </div>
                    <div class="clear"> </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" />
                            <button type="button" class="btn-default">@Html.ActionLink("Back to List", "Index")</button>
                        </div>
                    }
                    <div class="clear"> </div>
                </div>
            </div>
            <div class="clear"> </div>
        </div>
    </div>

